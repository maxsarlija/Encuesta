<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="encuesta.Vistas.CustomerSurveys"
             Title="Clientes">
    <ContentPage.Content>
        
        <StackLayout>
            <ListView x:Name="Surveys" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"
                      ItemSelected="">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical" Padding="15, 0" VerticalOptions="FillAndExpand">
                                <Label Text="{Binding Name}" FontSize="Medium" VerticalOptions="CenterAndExpand" />
                                <Label Text="{Binding Address}" FontSize="Micro" VerticalOptions="CenterAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>