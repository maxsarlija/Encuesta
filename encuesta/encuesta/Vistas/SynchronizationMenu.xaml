<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="encuesta.Vistas.SynchronizationMenu"
             Title="Sincronización - Menú">
    <ContentPage.Content>

        <StackLayout VerticalOptions="Center">

            <!-- Chequear conexiones -->
            <Button x:Name="BtnConnection" Text="Conexión" Clicked="BtnConnection_OnClick" 
                    BackgroundColor="Blue" TextColor="White" Margin="0, 0, 0, 20"/>

            <!-- Synchro inicial -->
            <Button x:Name="BtnInitialSync" Text="Sincronización inicial" Clicked="BtnInitialSync_OnClick" 
                    BackgroundColor="Orange" TextColor="White"/>

            <!-- Sincronizar encuestas -->
            <Button x:Name="BtnSyncSurveys" Text="Sincronizar encuestas" Clicked="BtnSyncSurveys_OnClick" 
                    BackgroundColor="Green" TextColor="White"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>