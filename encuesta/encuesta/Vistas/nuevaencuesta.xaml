<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="encuesta.Vistas.nuevaencuesta"
             Title="Menú Principal">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">


            <!-- Clientes -->
            <Button x:Name="BtnNewSurvey" Text="Nueva Encuesta" Clicked="BtnNewSurvey_OnClick"/>

            <!-- Clientes -->
            <Button x:Name="BtnViewSurveys" Text="Ver Encuestas" Clicked="BtnViewSurveys_OnClick"/>
            
            <!-- Clientes -->
            <Button x:Name="BtnTasks" Text="Tareas" Clicked="BtnTasks_OnClick"/>

            <!-- Clientes -->
            <Button x:Name="BtnBorrarDatos" Text="RESETEAR DATOS" Clicked="BtnBorrarDatos_OnClick" BackgroundColor="Red" TextColor="White"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>