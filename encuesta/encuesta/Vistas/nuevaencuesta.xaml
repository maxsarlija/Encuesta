            <!-- New survey -->
            <Image Source="nueva_encuesta.png" VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand"
               x:Name="NewSurvey" HeightRequest="80">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer
                Tapped="BtnNewSurvey_OnClick"
                NumberOfTapsRequired="1" />
                </Image.GestureRecognizers>
            </Image>

            <!-- New survey -->
            <Image Source="ver_encuesta.png" VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand"
               x:Name="ViewSurveys" HeightRequest="80">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer
                Tapped="BtnViewSurveys_OnClick"
                NumberOfTapsRequired="1" />
                </Image.GestureRecognizers>
            </Image>

            <!-- Tasks -->
            <Image Source="tareas.png" VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand"
               x:Name="Tasks" HeightRequest="80">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer
                Tapped="BtnTasks_OnClick"
                NumberOfTapsRequired="1" />
                </Image.GestureRecognizers>
            </Image>

            <!-- Synchronization -->
            <Image Source="sincronizar.png" VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand"
               x:Name="Syncrhonization" HeightRequest="80">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer
                Tapped="BtnSync_OnClick"
                NumberOfTapsRequired="1" />
                </Image.GestureRecognizers>
            </Image>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>